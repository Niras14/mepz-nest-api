<html lang='en'>
<head>
  <meta charset='utf-8' />
  <meta name='viewport' content='width=device-width, initial-scale=1' />
  <title>{{title}}</title>
  <link href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css' rel='stylesheet'
    integrity='sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65' crossorigin='anonymous' />
  <style>
    .page-break {
      page-break-before: always;
    }
  </style>
</head>
<body>
  <div class='container-fluid mb-5 mt-0'>
    <div class='row d-flex align-items-baseline'>
      <div class='col-xl-12'>
        {{#each departments}}
          {{#if (gt rooms.length 0)}}
            {{#index_gt @index}}<div class="page-break">{{/index_gt}}
              <p style='color: #242729;font-size: 16px; margin-bottom: 5px;'><b>Department:</b> <span>{{code}}</span> <span
                  style="margin-left:30px;">{{name}}</span></p>
            {{#index_gt @index}}</div>{{/index_gt}}
            <table class="table table-bordered" style="font-size: 15px; margin-bottom:20px;">
              <thead class="table-light">
                <tr>
                  <th style="padding-top:6px;padding-bottom:6px; color: #242729;">Room Code</th>
                  <th style="padding-top:6px;padding-bottom:6px; color: #242729;">Room Name</th>
                  <th style="padding-top:6px;padding-bottom:6px; color: #242729;">Status</th>
                </tr>
              </thead>
              <tbody>
                {{#each rooms}}
                <tr>
                  <td style="padding-top:6px;padding-bottom:6px">{{code}}</td>
                  <td style="padding-top:6px;padding-bottom:6px">{{name}}</td>
                  <td style="padding-top:6px;padding-bottom:6px"></td>
                </tr>
                {{/each}}
              </tbody>
            </table>
          {{/if}}
        {{/each}}
      </div>
    </div>
  </div>
</body>
</html>