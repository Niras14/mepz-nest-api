<html lang='en'>
  <head>
    <meta charset='utf-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1' />
    <title>{{title}}</title>
    <link
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css'
      rel='stylesheet'
      integrity='sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65'
      crossorigin='anonymous'
    />
    <style>
    
    .page-break {
      page-break-before: always;
    }
  </style>
  </head>
  <body>
    <div class='container mb-5 mt-3'>
      <div class='row d-flex align-items-baseline'>
        <div class='col-xl-12'>
          <p style='color: #304f4f;font-size: 20px; margin-bottom: 15px;'>Project Name : <strong>{{EquipmentItemlist.0.project_name}}</strong></p>
		  <p style='color: #304f4f;font-size: 20px; margin-bottom: 15px;'
          > Revision No: 5.001*    Date: {{currentDate}}</p>
		   <p style='color: #304f4f;font-size: 20px; margin-bottom: 15px;'
          > Equipment Location Listing  Qty : TotalÂ Quantity</p>
          <p
            style='color: #304f4f;font-size: 20px; margin-bottom: 15px;'
          >Project Name : <strong>{{name}}</strong></p>
   
         

            <table class='table table-bordered'>
              <thead class='table-light'>
                <tr>
                  <th>Equipment Code</th>
                  <th>Equipment Name</th>
                  <th>Qty</th>
                  <th>Group</th>
                  <th>Remarks</th>
                </tr>
              </thead>
              <tbody>
                   {{#each groupedByDepartment as |EquipmentItemlist key1|}}

                   {{#index_gt @index}}
			              <div class="page-break">
			             {{/index_gt}}
                  {{#value_undefine @key1}}
                    {{key1}} 
                 {{/value_undefine}}
                   {{#index_gt @index}}  </div>  {{/index_gt}}
                
                  {{#each EquipmentItemlist}}
                    <tr>
                      <td>{{code}}</td>
                      <td>{{name}}</td>
                      <td>{{quantity}}</td>
                      <td>{{group}}</td>
                      <td>{{remarks}}</td>

                    </tr>
                  {{/each}}
                
					      <tr>
                    <td>   </td>
                    
                    <td>Total  
                 {{#value_undefine @key1}}
                    {{key1}} 
                 {{/value_undefine}}</td>
                    <td>{{sum EquipmentItemlist "quantity"}}</td>
                  </tr>
                   {{/each}}

              </tbody>
            </table>
         
        </div>
      </div>
    </div>
  </div>
</body>

</html>