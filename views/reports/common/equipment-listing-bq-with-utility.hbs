<html lang='en'>
  <head>
    <meta charset='utf-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1' />
    <title>{{title}}</title>
    <link
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css'
      rel='stylesheet'
      integrity='sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65'
      crossorigin='anonymous'
    />
  </head>
  <body>
    <div class='container mb-5 mt-3'>
      <div class='row d-flex align-items-baseline'>
        <div class='col-xl-12'>
          <p
            style='color: #304f4f;font-size: 20px; margin-bottom: 15px;'
          >Project Name : <strong>{{name}}</strong>
		  {{#if top_logo}}
		  <img src="http://13.232.11.217/assets/images/logo.png">
		  {{/if}}
		  </p>
          {{#each departments}}
            <p
              style='color: #000;font-size: 18px; margin-bottom: 15px;'
            >Department : {{code}} - {{name}}</p>

            <table class='table table-bordered'>
              <thead class='table-light'>
                <tr>
                  <th>Equipment Code</th>
                  <th>Equipment Name</th>
                  <th>Qty</th>
                  <th>Utility</th>
                  <th>Remarks</th>
                </tr>
              </thead>
              <tbody>
                {{#each rooms}}
                  {{#each equipments}}
                    <tr>
                      <td>{{code}}</td>
                      <td>{{name}}</td>
                      <td>{{quantity}}</td>
                      <td>{{utility}}</td>
                      <td>{{remarks}}</td>
                    </tr>
                  {{/each}}
                {{/each}}
				
              </tbody>
            </table>
          {{/each}}
		  <table ><tbody>
		  <tr>
                      <td></td>
                      <td>Total Equipment:</td>
                      <td>	{{calculateSumOfTotalAll departments }}</td>
                    <td></td>
                     <td></td>
                    </tr> </tbody>
            </table>
			 {{#if b_logo}}
		 <p> <img src="http://13.232.11.217/assets/images/logo.png"> </p>
		  {{/if}}
        </div>
      </div>
    </div>
  </body>
</html>