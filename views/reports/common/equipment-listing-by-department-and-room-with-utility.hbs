<html lang='en'>
  <head>
    <meta charset='utf-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1' />
    <title>{{title}}</title>
    <link
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css'
      rel='stylesheet'
      integrity='sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65'
      crossorigin='anonymous'
    />
	<style>
    
    .page-break {
      page-break-before: always;
    }
  </style>
  </head>
  <body>
    <div class='container mb-5 mt-3'>
      <div class='row d-flex align-items-baseline'>
        <div class='col-xl-12'>
     <p style='color: #304f4f;font-size: 20px; margin-bottom: 15px;'>Project Name : <strong>{{name}}</strong>   {{#if top_logo}}
		  <img src="http://13.232.11.217/assets/images/logo.png">
		  {{/if}} </p>
          {{#each departments}}
       <p style='color: #000;font-size: 18px; margin-bottom: 15px;'>Department : {{code}} - {{name}}</p>
	    {{#each rooms}}
			{{#if ../../pagewise}}
			{{#index_gt @index}}
		
			<div class="page-break">
			 {{/index_gt}}  {{/if}}
       <p style='color: #000;font-size: 18px; margin-bottom: 15px;'>Rooms : {{code}} - {{name}}</p>

            <table class='table table-bordered'>
              <thead class='table-light'>
                <tr>
                  <th>Item Code</th>
                  <th>Description</th>
                  <th>Qty</th>
                  <th>Package</th>
                  <th>Remarks</th>
                  <th>Y N</th>
                  <th>Client Remarks</th>
                </tr>
              </thead>
              <tbody>
               
                  {{#each equipments}}
                    <tr>
                      <td>{{code}}</td>
                      <td>{{name}}</td>
                      <td>{{quantity}}</td>
					   <td></td>
                      <td></td>
                      <td></td>
                      <td></td>
                    </tr>
                  {{/each}}
                  <tr>
                      <td></td>
                      <td>Total Equipments for Room {{code}} </td>
                      <td>{{sum equipments  "quantity" }} </td>
                      <td></td>
                      <td></td>
                      <td></td>
                      <td></td>
                    </tr>
              </tbody>
            </table>
			
			  {{#if ../../w_sign}}
			    <table class='table '>
				  <tbody>
				   <tr>
				     <td>Received by:</td>
					  <td></td>
					  <td></td>
					  <td>MNE SOLUTIONS: </td>
				   </tr>
				    <tr>
				     <td>Full Name</td>
					  <td>Full Name</td>
					  <td>Full Name</td>
					 
				   </tr>
				    <tr>
				     <td>Designation</td>
					  <td>Designation</td>
					  <td>Designation</td>
					 
				   </tr>
				    <tr>
				     <td>Stamp</td>
					  <td>Stamp</td>
					  <td>Stamp</td>
					 
				   </tr>
				    <tr>
				     <td>Date</td>
					  <td>Date</td>
					  <td>Date</td>
					 
				   </tr>
				   </tbody>
              </table>
			  {{/if}}
			{{/each}}
          {{/each}}
		    {{#if b_logo}}
		  <img src="http://13.232.11.217/assets/images/logo.png">
		  {{/if}}
		  {{#if medical_logo}}
		  <img src="http://13.232.11.217/assets/images/logo.png">
		  {{/if}}
		  {{#if medical_logo2}}
		  <img src="http://13.232.11.217/assets/images/logo.png">
		  {{/if}}
		  {{#if medical_logo3}}
		  <img src="http://13.232.11.217/assets/images/logo.png">
		  {{/if}}
        </div>
      </div>
    </div>
  </body>
</html>