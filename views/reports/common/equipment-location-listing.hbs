<html lang='en'>
  <head>
    <meta charset='utf-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1' />
    <title>{{title}}</title>
    <link
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css'
      rel='stylesheet'
      integrity='sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65'
      crossorigin='anonymous'
    />
  </head>
  <body>
    <div class='container mb-5 mt-3'>
      <div class='row d-flex align-items-baseline'>
        <div class='col-xl-12'>
          <p
            style='color: #304f4f;font-size: 20px; margin-bottom: 15px;'
          >Project Name : <strong>{{equipments.0.project_name}}</strong></p>
		   <p
            style='color: #304f4f;font-size: 20px; margin-bottom: 15px;'
          > Equipment Location Listing</p>
		  
		  
          {{#each equipments}}
            {{!--@index--}}

            {{!-- {{@index}}: --}}
            {{!-- {{this}} --}}
            <p
              style='color: #000;font-size: 18px; margin-bottom: 15px;'
            >Equipments : {{eqp_code}} - {{eqp_name}}</p>

            <table class='table table-bordered'>
              <thead class='table-light'>
                <tr>
                  <th>Dept Code</th>
                  <th>Dept Name</th>
                  <th>Room Code</th>
                  <th>Room Name</th>
                  <th>Qty</th>
                </tr>
              </thead>
              <tbody>
                {{!-- {{#each rooms}} --}}
				
                {{#each locations}}
				
                  <tr>
                    <td> {{department_code}}  </td>
                    <td>{{department_name}}</td>
                    <td>{{room_code}}</td>
                    <td>{{room_name}}</td>
                    <td>{{quantity}}</td>
                  </tr>
                  {{!-- {{/each}} --}}
				
                {{/each}}
				<tr>
                    <td>   </td>
                    <td></td>
                    <td></td>
                    <td>Sub-Total:</td>
                    <td>{{sum locations "quantity"}}</td>
                  </tr>
              </tbody>
            </table>
          {{/each}}
        </div>
      </div>
    </div>
  </body>
</html>