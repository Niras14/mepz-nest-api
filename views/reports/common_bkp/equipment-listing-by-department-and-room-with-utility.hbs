<html lang='en'>
<head>
  <meta charset='utf-8' />
  <meta name='viewport' content='width=device-width, initial-scale=1' />
  <title>{{title}}</title>
  <link href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css' rel='stylesheet'integrity='sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65' crossorigin='anonymous' />
  <style>
    .page-break { page-break-before: always; }
  </style>
</head>
<body>
  <div class='container-fluid mb-5 mt-0'>
    <div class='row d-flex align-items-baseline'>
      <div class='col-xl-12'>
        {{#each departments as |dept|}}
          {{#each rooms}}
            {{#if ../../pagewise}}{{#index_gt @index}}<div class="page-break"></div>{{/index_gt}} {{/if}}
            {{#if (gt dept.rooms.length 0)}}
              {{#if (gt equipments.length 0)}}
                <p style='color: #242729;font-size: 16px; margin-bottom: 5px;'><b>Department:</b> <span>{{dept.code}}</span> <span
                style="margin-left:30px;">{{dept.name}}</span></p>
                <p style='color: #242729;font-size: 16px; margin-bottom: 5px;'><b>Rooms:</b> <span>{{code}}</span> <span
                style="margin-left:30px;">{{name}}</span></p>
                <table class='table table-bordered' style="font-size: 15px; margin-bottom:20px;">
                  <thead class='table-light'>
                    <tr>
                      <th style="padding-top:6px;padding-bottom:6px; color: #242729;">Item Code</th>
                      <th style="padding-top:6px;padding-bottom:6px; color: #242729;">Description</th>
                      <th style="padding-top:6px;padding-bottom:6px; color: #242729;">Qty</th>
                      <th style="padding-top:6px;padding-bottom:6px; color: #242729;">Package</th>
                      <th style="padding-top:6px;padding-bottom:6px; color: #242729;">Remarks</th>
                      <th style="padding-top:6px;padding-bottom:6px; color: #242729;">Y N</th>
                      <th style="padding-top:6px;padding-bottom:6px; color: #242729;">Client Remarks</th>
                    </tr>
                  </thead>
                  <tbody>
                    {{#each equipments}}
                      <tr>
                        <td style="padding-top:6px;padding-bottom:6px;">{{code}}</td>
                        <td style="padding-top:6px;padding-bottom:6px;">{{name}}</td>
                        <td style="padding-top:6px;padding-bottom:6px;">{{quantity}}</td>
                        <td style="padding-top:6px;padding-bottom:6px;"></td>
                        <td style="padding-top:6px;padding-bottom:6px;"></td>
                        <td style="padding-top:6px;padding-bottom:6px;"></td>
                        <td style="padding-top:6px;padding-bottom:6px;"></td>
                      </tr>
                    {{/each}}
                    <tr>
                      <td colspan="2" style="padding-top:6px;padding-bottom:6px;">Total Equipments for Room {{code}} </td>
                      <td>{{sum equipments "quantity" }} </td>
                    </tr>
                  </tbody>
                </table>
                {{#if ../../w_sign}}
                  <table class='table table-borderless'>
                    <tbody>
                      <tr>
                        <td style="border-bottom:1px solid #dfe0e1">Received by:</td>
                        <td style="border-bottom:1px solid #dfe0e1"></td>
                        <td style="border-bottom:1px solid #dfe0e1">MNE SOLUTIONS: </td>
                      </tr>
                      <tr>
                        <td>Full Name</td>
                        <td>Full Name</td>
                        <td>Full Name</td>
                      </tr>
                      <tr>
                        <td>Designation</td>
                        <td>Designation</td>
                        <td>Designation</td>
                      </tr>
                      <tr>
                        <td>Stamp</td>
                        <td>Stamp</td>
                        <td>Stamp</td>
                      </tr>
                      <tr>
                        <td>Date</td>
                        <td>Date</td>
                        <td>Date</td>
                      </tr>
                    </tbody>
                  </table>
                {{/if}}
              {{/if}}
            {{/if}}
          {{/each}}
        {{/each}}
        <p style="text-align:right; margin-bottom:0px; color: #242729;"><b>Total Equipment : {{ calculateSumOfTotalEquipmentListingDept departments }}</b></p>
        {{#if w_sign}}
          <table class='table table-borderless'>
            <tbody>
              <tr>
                <td style="border-bottom:1px solid #dfe0e1">Received by:</td>
                <td style="border-bottom:1px solid #dfe0e1"></td>
                <td style="border-bottom:1px solid #dfe0e1">MNE SOLUTIONS: </td>
              </tr>
              <tr>
                <td>Full Name</td>
                <td>Full Name</td>
                <td>Full Name</td>
              </tr>
              <tr>
                <td>Designation</td>
                <td>Designation</td>
                <td>Designation</td>
              </tr>
              <tr>
                <td>Stamp</td>
                <td>Stamp</td>
                <td>Stamp</td>
              </tr>
              <tr>
                <td>Date</td>
                <td>Date</td>
                <td>Date</td>
              </tr>
            </tbody>
          </table>
        {{/if}}
        <div class="text-center">
          {{#if b_logo}}<img style="height: 30px; width: auto;" src="http://13.232.11.217/assets/images/logo.png">{{/if}}
          {{#if medical_logo}}<img style="height: 30px; width: auto;" src="http://13.232.11.217/assets/images/logo.png">{{/if}}
          {{#if medical_logo2}}<img style="height: 30px; width: auto;" src="http://13.232.11.217/assets/images/logo.png">{{/if}}
          {{#if medical_logo3}}<img style="height: 30px; width: auto;" src="http://13.232.11.217/assets/images/logo.png">{{/if}}
        <div>
      </div>
    </div>
  </div>
</body>
</html>