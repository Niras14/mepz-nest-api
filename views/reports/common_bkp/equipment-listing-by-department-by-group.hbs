<html lang='en'>
<head>
  <meta charset='utf-8' />
  <meta name='viewport' content='width=device-width, initial-scale=1' />  
  <title>{{title}}</title>
  <link href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css' rel='stylesheet'
    integrity='sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65' crossorigin='anonymous' />
  <style>
    .page-break {
      page-break-before: always;
    }
  </style>
</head>
<body>
  <div class='container-fluid mb-5 mt-0'>
    <div class='row d-flex align-items-baseline'>
      <div class='col-xl-12'>
        {{#each departments }}
          {{#if (gt departments.data.length 0)}}  {{/if}}
            {{#if pagewise}}{{#index_gt @index}}<div class="page-break">{{/index_gt}} {{/if}}
              <p style='color: #242729;font-size: 16px; margin-bottom: 5px;'><b>Department:</b> <span>
                {{deapartcode}}</span> <span
                  style="margin-left:30px;">{{deapartname}}</span></p>
            {{#if pagewise}} {{#index_gt @index}}</div> {{/index_gt}} {{/if}}
            <table class='table table-bordered' style="font-size: 15px; margin-bottom:20px;">
              <thead class='table-light'>
                <tr>
                  <th style="padding-top:6px;padding-bottom:6px; color: #242729;">Equipment Code</th>
                  <th style="padding-top:6px;padding-bottom:6px; color: #242729;">Equipment Name</th>
                  <th style="padding-top:6px;padding-bottom:6px; color: #242729;">Quantity</th>
                </tr>
              </thead>
              <tbody>
              
                  {{#each data as |equ key4| }}
                 <tr>
              <td colspan="5" style="padxding-top:6px;padding-bottom:6px;">  {{#value_undefine @key4}} {{/value_undefine}}</td>
            </tr>
                   {{#each equ  }}
                    <tr>
                      <td style="padding-top:6px;padding-bottom:6px">{{code}}</td>
                      <td style="padding-top:6px;padding-bottom:6px">{{name}}</td>
                      <td style="padding-top:6px;padding-bottom:6px">{{qty}}</td>
                    </tr>
                     {{/each}}
                      <tr style="border: 0;">
                  <td style="border: 0;"></td>
                  <td style="border-color: #dfe0e1; border-bottom: 1px solid #dfe0e1; padding-top:6px;padding-bottom:6px">
                    Sub-Total:</td>
                  <td style="border-color: #dfe0e1; border-bottom: 1px solid #dfe0e1; padding-top:6px;padding-bottom:6px">
                    {{sumQuantities equ }} </td>
                </tr>
                  {{/each}}
               
               
              </tbody>
            </table>
        
        {{/each}}
       
      </div>
    </div>
  </div>
</body>
</html>